<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.abroliza.sidemenuusingactivityexample">

    <application
        android:name=".MyApplication"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".SideMenuActivity"
            android:theme="@style/Theme.Transparent"
            android:screenOrientation="unspecified"/>
        <activity android:name=".NavigationActivity" />
        <activity android:name=".sidemenu.MyOrders" />
        <activity android:name=".sidemenu.MyCart" />
        <activity android:name=".sidemenu.MyAddress" />
        <activity android:name=".sidemenu.MyPayments" />
    </application>

</manifest>